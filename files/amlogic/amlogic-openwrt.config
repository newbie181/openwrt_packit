# Base
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_AMLOGIC_SOC="s905x"
CONFIG_TARGET_TYPE="img"
CONFIG_KERNEL_VERSION="5.15"

# LuCI & TTYD
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Utilities
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_dnsmasq-full=y

# Filesystem & Storage
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-nls-cp437=y
CONFIG_PACKAGE_kmod-nls-iso8859-1=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fdisk=y

# WiFi Drivers (Totolink, Realtek, MT7601U)
CONFIG_PACKAGE_kmod-mt7601u=y
CONFIG_PACKAGE_kmod-rtl8188eu=y
CONFIG_PACKAGE_kmod-rtl8192cu=y
CONFIG_PACKAGE_kmod-rtl8xxxu=y
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y
CONFIG_PACKAGE_kmod-usb-net-asix=y
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_kmod-cfg80211=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_hostapd-common=y

# Add-on: Passwall (All modules)
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Libev_Client=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Libev_Server=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Rust_Client=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Trojan_GO=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Xray=y

# Add-on: OpenClash
CONFIG_PACKAGE_luci-app-openclash=y

# DNS Utilities
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_pdnsd-alt=y
CONFIG_PACKAGE_tcping=y
CONFIG_PACKAGE_iputils-ping=y

# Optional: Tunneling
CONFIG_PACKAGE_socat=y
CONFIG_PACKAGE_tun=y
